{
  "name": "tap-color",
  "version": "1.0.0",
  "description": "Colorize The Test Anything Protocol Output",
  "license": "MIT",
  "main": "lib/tap-color",
  "bin": "cli.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "babel src/. -d lib/. --ignore=spec.js",
    "test": "cat example-output.txt | sed 's/^not //' | node cli.js",
    "lint": "standard src",
    "prebuild": "npm run clean",
    "prepublish": "npm run build"
  },
  "author": {
    "name": "Sigurd Fosseng",
    "email": "sigurd@fosseng.net",
    "url": "http://laat.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/laat/tap-color.git"
  },
  "dependencies": {
    "byline": "^4.2.1",
    "chalk": "^1.1.1",
    "duplexer2": "^0.1.4",
    "through2": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.4.3",
    "standard": "^5.4.1"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "babel": {
    "presets": [
      "es2015"
    ]
  }
